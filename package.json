{
  "name": "react-native-universal-project",
  "version": "0.0.1",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/@react-native-async-storage/async-storage",
      "**/react",
      "**/react-dom",
      "**/react-native",
      "**/react-native/**",
      "**/react-native-codegen",
      "**/react-native-dev-menu",
      "**/react-native-macos",
      "**/react-native-windows"
    ]
  },
  "scripts": {
    "reset": "find . -type dir -name node_modules | xargs rm -rf && rm -rf yarn.lock",
    "android:metro": "yarn workspace @travld/mobile start",
    "android:start": "yarn workspace @travld/mobile android",
    "android:studio": "yarn workspace @travld/mobile studio",
    "ios:metro": "yarn workspace @travld/mobile start",
    "ios:start": "yarn workspace @travld/mobile ios",
    "ios:xcode": "yarn workspace @travld/mobile xcode",
    "ios:pods": "yarn workspace @travld/mobile pods",
    "tv:android:metro": "yarn workspace @travld/tv start",
    "tv:android:start": "yarn workspace @travld/tv android",
    "tv:android:studio": "yarn workspace @travld/tv studio",
    "tv:tvos:metro": "yarn workspace @travld/tv start",
    "tv:tvos:start": "yarn workspace @travld/tv ios",
    "tv:tvos:xcode": "yarn workspace @travld/tv xcode",
    "tv:tvos:pods": "yarn workspace @travld/tv pods",
    "macos:metro": "yarn workspace @travld/macos start",
    "macos:start": "yarn workspace @travld/macos macos",
    "macos:xcode": "yarn workspace @travld/macos xcode",
    "macos:pods": "yarn workspace @travld/macos pods",
    "web:start": "yarn workspace @travld/web start",
    "web:build": "yarn workspace @travld/web build",
    "next:start": "yarn workspace @travld/next dev",
    "next:build": "yarn workspace @travld/next build",
    "next:serve": "yarn workspace @travld/next start",
    "electron:start": "yarn workspace @travld/electron start",
    "electron:package:mac": "yarn workspace @travld/electron package:mac",
    "electron:package:win": "yarn workspace @travld/electron package:win",
    "electron:package:linux": "yarn workspace @travld/electron package:linux",
    "browser-ext:start": "yarn workspace @travld/browser-ext start",
    "browser-ext:build": "yarn workspace @travld/browser-ext build",
    "windows:metro": "yarn workspace @travld/windows start",
    "windows:start": "yarn workspace @travld/windows windows",
    "lint": "ultra -r lint",
    "lint:fix": "ultra -r lint:fix",
    "test": "ultra -r test",
    "typecheck": "ultra -r typecheck"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react-app": "^6.2.2",
    "eslint-plugin-react-native": "^3.11.0",
    "prettier": "^2.3.2",
    "typescript": "^4.4.2",
    "ultra-runner": "^3.10.5"
  },
  "packageManager": "yarn@3.2.1"
}
